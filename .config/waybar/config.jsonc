{
    "layer": "top",
    "position": "bottom",
    "mod": "dock",
    "exclusive": true,
    "passtrough": false,
    "gtk-layer-shell": true,
    "height": 0,
    "modules-left": [
        "clock",
        "tray"
        // "hyprland/window"
    ],
    "modules-center": [],
    "modules-right": [
        "hyprland/workspaces",
        // https://github.com/open-pomodoro/openpomodoro-cli#installation
        "custom/pomodoro",
        "network",
        "pulseaudio",
        "battery"
    ],
    "hyprland/window": {
        "format": "{}"
    },
    "hyprland/workspaces": {
        "on-scroll-up": "hyprctl dispatch workspace e+1",
        "on-scroll-down": "hyprctl dispatch workspace e-1",
        "all-outputs": true,
        "on-click": "activate",
        "format": "{icon}",
        "format-icons": {
            "urgent": "‚ü≥",
            "active": "‚óΩ",
            "default": "‚óæ"
        }
    },
    "tray": {
        "icon-size": 12,
        "tooltip": false,
        "spacing": 10
    },
    "clock": {
        "format": "{:%H.%M  %a %b %d}",
        "tooltip-format": "<big>{:%Y %B}</big>\n\n<tt><small>{calendar}</small></tt>"
    },
    "pulseaudio": {
        "format": "üîä {volume}%",
        "tooltip": false,
        "format-muted": "üîä N/A",
        "on-click": "changeVolume toggle",
        "on-scroll-up": "changeVolume 5%+",
        "on-scroll-down": "changeVolume 5%-",
        "scroll-step": 5
    },
    "pulseaudio#microphone": {
        "format": "{format_source}",
        "tooltip": false,
        "format-source": "Èü≥ÂÖ•Ôºö{volume}„Éë",
        "format-source-muted": "Èü≥Â£∞ÂÖ•ÂäõÔºöÁÑ°",
        "on-click": "amixer set Capture toggle",
        "on-scroll-up": "amixer set Capture 5%+",
        "on-scroll-down": "amixer set Capture 5%-",
        "scroll-step": 5
    },
    "network": {
        "format-wifi": "üì° {essid} {signalStrength}%",
        "format-ethernet": "üì° {signalStrength}%",
        "tooltip-format": "Êé•Á∂öÂÖà:{essid}„ÄÄ„Ç¢„Éâ„É¨„ÇπÔºö{No IP}",
        "format-disconnected": "üì° N/A"
    },
    "battery": {
        "states": {
            "warning": 20,
            "critical": 15
        },
        "format": "üîã {capacity}%",
        "format-charging": "üîå {capacity}%",
        "format-plugged": "üîå {capacity}%"
    },
    "custom/pomodoro": {
        "format": "üçÖ {}",
        "exec": "pomodoro status --format '%r'",
        "exec-if": "pgrep pomodoro || exit 0",
        "interval": 2, 
        "on-click": "pomodoro start",
        "on-click-middle": "pomodoro break",
        "on-click-right": "pomodoro finish"
    }
}
